@namespace("org.ga4gh")
protocol GAMethods {

// This request maps to the body of POST /readsets/search
record GASearchReadsetsRequest {
  // Restricts this query to readsets within the given datasets.
  union { null, array<string> } dataset_ids = null;
  
  // Only return readsets with names matching this substring.
  union { null, string } name = null;

  // The continuation token, which is used to page through large result sets.
  // To get the next page of results, set this parameter to the value of
  // "nextPageToken" from the previous response.
  union { null, string } page_token = null;
}

// This is the response from POST /readsets/search
record GASearchReadsetsResponse {
  // The list of matching Readsets.
  union { null, array<GA4GHReadSet> } readsets = null;

  // The continuation token, which is used to page through large result sets.
  // Provide this value in a subsequent request to return the next page of
  // results. This field will be empty if there aren't any additional results.
  union { null, string } next_page_token = null;
}

// This request maps to the body of POST /reads/search
record GASearchReadsRequest {

  // If specified, will restrict this query to reads within the given datasets.
  // At least one dataset ID or a readset ID must be provided.
  union { null, array<string> } dataset_ids = null;

  // If specified, will restrict this query to reads within the given readsets.
  // At least one dataset ID or a readset ID must be provided.
  union { null, array<string> } readset_ids = null;
  
  // If specified, will further restrict this query to reads within the given readgroups.
  union { null, array<string> } readgroup_ids = null;

  // The contig to query. (e.g. 'X' for the X chromosome)
  // Leaving this blank returns results from all contigs, including
  // unmapped reads.
  union { null, string } contig = null;

  // The start position (0-based) of this query. If a contig is
  // specified, this defaults to 0.
  union { null, long } start_position = null;

  // The end position (1-based, inclusive) of this query. If a contig is
  // specified, this defaults to the contig's length.
  union { null, long } end_position = null;

  // The continuation token, which is used to page through large result sets.
  // To get the next page of results, set this parameter to the value of
  // "nextPageToken" from the previous response.
  union { null, string } page_token = null;
}

// This is the response from POST /reads/search
record GASearchReadsResponse {

  // The list of matching Reads. The resulting Reads are sorted by position.
  // Unmapped reads, which have no position, are returned last and are further
  // sorted by name.
  union { null, array<GA4GHRead> } reads = null;

  // The continuation token, which is used to page through large result sets.
  // Provide this value in a subsequent request to return the next page of
  // results. This field will be empty if there aren't any additional results.
  union { null, string } next_page_token = null;
}

}
